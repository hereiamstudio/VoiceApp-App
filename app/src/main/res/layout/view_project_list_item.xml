<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/project_list_item_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    android:focusable="true"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/large_padding"
        android:orientation="vertical"
        android:textAlignment="viewStart">

        <TextView
            style="@style/CardTextTitle"
            android:id="@+id/tv_project_name"
            android:textColor="@color/card_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_padding"
            android:textAlignment="inherit"
            tools:text="Hong Kong Typhoon" />

        <TextView
            style="@style/CardText"
            android:id="@+id/tv_project_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_padding"
            android:ellipsize="end"
            android:textAlignment="inherit"
            tools:text="A very very very very very very very very very very very very very very very very very very very very very very long description" />

        <TextView
            style="@style/Text.Secondary"
            android:id="@+id/interviewCountText"
            android:textAlignment="inherit"
            tools:text="5 Interviews" />

        <ImageView
            android:id="@+id/iv_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />
    </LinearLayout>
</androidx.cardview.widget.CardView>