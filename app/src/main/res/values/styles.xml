<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background_default</item>

        <!-- This sets the ripple colours for some default views-->
        <item name="android:colorControlActivated">@color/colorPrimary</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
        <item name="errorTextColor">@color/error_text_color</item>

        <!-- Widget styles -->
        <item name="expandCollapseIndicatorStyle">@style/Widget.ExpandCollapseIndicator</item>
        <item name="progressIndicatorStyle">@style/Widget.ProgressIndicator</item>
        <item name="linearProgressIndicatorStyle">@style/Widget.LinearProgressIndicator</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.WhiteBackground">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="hintText" parent="android:TextAppearance">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="hintText.inv" parent="android:TextAppearance">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">38sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
        <item name="android:layout_marginTop">@dimen/large_padding</item>
    </style>

    <style name="DescText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DescText.Inv" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/text_dark</item>
    </style>

    <style name="BodyText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTitle.Inv" >
        <item name="android:textColor">@color/card_text</item>
    </style>

    <style name="TextTitle.NoMargin">
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
    </style>

    <style name="CardTextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CardTextTitle.Small">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="CardText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="PinPasswordText">
        <item name="android:inputType">numberPassword</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:theme">@style/PinTextTheme</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Larger">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Text.Secondary">
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="PinTextTheme">
        <item name="colorControlActivated">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/default_padding</item>
        <item name="android:paddingBottom">@dimen/default_padding</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/button_default</item>
    </style>

    <style name="Button.White">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="EditTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextAppearance">@style/hintText</item>
        <item name="android:layout_marginBottom">@dimen/small_padding</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="errorTextColor">@color/error_text_color</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="errorIconTint">@color/error_text_color</item>
    </style>

    <style name="EditTextInputLayoutStyle.Inv">
        <item name="android:textColorHint">@color/text_dark</item>
        <item name="hintTextAppearance">@style/hintText.inv</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke_inv</item>
        <item name="helperTextTextColor">@color/text_dark</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/et_padding</item>
        <item name="android:paddingTop">@dimen/et_padding</item>
        <item name="colorError">@color/error_text_color</item>
        <item name="errorTextColor">@color/error_text_color</item>
        <item name="errorIconTint">@color/error_text_color</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/error_text_color</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="Divider.BottomBar">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/bottom_bar_divider</item>
    </style>>

    <style name="ImageButton" >
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_margin">@dimen/small_padding</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="ImageButton.Check" >
        <item name="android:src">@drawable/ic_check</item>
    </style>

    <style name="ImageButton.Cross" >
        <item name="android:src">@drawable/ic_baseline_clear</item>
    </style>

    <style name="CheckListItem" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@drawable/ic_check</item>
        <item name="android:drawableTint">@color/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/rounded_rect_background_light</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:drawablePadding">@dimen/small_padding</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="SingleCodeRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/checkbox_background</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>

        <item name="android:button">@drawable/checkbox_singlecode_tick</item>
        <item name="android:buttonTint">@color/button_foreground_drawable_color</item>
        <item name="android:layout_marginTop">@dimen/small_padding</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:paddingTop">@dimen/large_padding</item>
        <item name="android:paddingBottom">@dimen/large_padding</item>

        <item name="android:textColor">@color/button_foreground_color</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MultiCodeCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:buttonTint">@color/checkbox_foreground_color</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:checked">false</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:button">@drawable/checkbox_selector</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
    </style>

    <style name="EmptyListText">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:background">@drawable/rounded_rect_background_primary</item>

        <item name="android:paddingStart">@dimen/horizontal_padding_text_icons</item>
        <item name="android:paddingEnd">@dimen/horizontal_padding_text_icons</item>
        <item name="android:paddingTop">@dimen/vertical_padding_text_icons</item>
        <item name="android:paddingBottom">@dimen/vertical_padding_text_icons</item>
        <item name="android:layout_marginEnd">@dimen/small_padding</item>

        <item name="android:layout_gravity">top|start</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="LightDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_short</item>
        <item name="android:windowExitAnimation">@anim/fade_out_short</item>
    </style>

    <style name="DialogAnimation.Long">
        <item name="android:windowEnterAnimation">@anim/fade_in_long</item>
        <item name="android:windowExitAnimation">@anim/fade_out_long</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowAnimationStyle">@style/DialogAnimation.Long</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Widget.App.Snackbar" parent="Widget.MaterialComponents.Snackbar.FullWidth">
    </style>

    <style name="Widget.ExpandCollapseIndicator" parent="@android:style/Widget">
        <item name="android:contentDescription">@null</item>
        <item name="expandedState">collapsed</item>
        <item name="collapsedContentDescription">@string/expandcollapseindicator_contentdescription_collapsed</item>
        <item name="expandedContentDescription">@string/expandcollapseindicator_contentdescription_expanded</item>
    </style>

    <style name="Widget.ProgressIndicator" parent="@android:style/Widget">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style
        name="Widget.LinearProgressIndicator"
        parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackThickness">@dimen/small_padding</item>
        <item name="trackColor">@color/colorAccentDimmed</item>
        <item name="indicatorColor">@color/colorAccent</item>
    </style>
</resources>
